<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customfvedialog"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/dialogvfwindow"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25" >

         <ImageView
            android:id="@+id/fvelogo"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:cropToPadding="false"
            android:contentDescription="@string/fundacion"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fve_logo_rojo" />
    </LinearLayout>

    <TextView
        android:id="@+id/followText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:text="@string/followTextDialog"
        android:textColor="#BC0000"
        android:textSize="19sp" />

    <LinearLayout
        android:id="@+id/optionsLayout"
        android:layout_width="557dp"
        android:layout_height="180dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="0.07"
        android:background="@drawable/vdfgradient"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:text="@string/textoradiobuttondialogfve"
            android:textAppearance="@style/PrimaryFont"
            android:textColor="#333333"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/layoutButtonsExit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonDialogFacebook"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="13dp"
                android:layout_weight="0.3"
                android:background="@drawable/white_button"
                android:drawableLeft="@drawable/facebook_icon"
                android:radius="5dp"
                android:text="@string/ButtonFacebook"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonDialogTwitter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="6dp"
                android:layout_weight="0.3"
                android:background="@drawable/white_button"
                android:drawableLeft="@drawable/twitter_icon"
                android:radius="5dp"
                android:text="@string/ButtonTwitter"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonDialogSalir"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.3"
                android:background="@drawable/purple_button"
                android:drawableLeft="@drawable/exiticonalphasmal"
                android:radius="5dp"
                android:text="@string/ButtonExit"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>