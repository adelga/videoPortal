<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="460dp"
    android:layout_margin="10dp"
    android:background="@drawable/blue"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layoutTituloTerminos"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.07"
        android:orientation="vertical"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:text="@string/tituloterminos"
            android:textColor="#FFDC0E"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- <ScrollView -->
    <!-- android:id="@+id/layouttext" -->
    <!-- android:layout_width="fill_parent" -->
    <!-- android:layout_height="0dp" -->
    <!-- android:layout_margin="5dp" -->
    <!-- android:layout_weight="0.8" -->
    <!-- android:fillViewport="true"> -->
    <!-- <LinearLayout -->
    <!-- android:layout_width="fill_parent" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:orientation="vertical"> -->

    <TextView
        android:id="@+id/layouttext"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="0.8"
        android:background="#FFFFFF"
        android:scrollbars="vertical"
        android:textSize="22sp"
        android:text="@string/terminosycondiciones"
        android:textAppearance="@style/PrimaryFont" />

    <!-- </ScrollView> -->

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.13"
        android:orientation="horizontal"
        android:paddingBottom="5dp" >

        <Button
            android:id="@+id/buttonDialogCancelar"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="@drawable/blue_button"
            android:radius="5dp"
            android:text="@string/cancelar"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/buttonDialogAceptar"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="@drawable/yellow_button"
            android:radius="5dp"
            android:text="@string/aceptar"
            android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>