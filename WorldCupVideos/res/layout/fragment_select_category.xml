<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    tools:context="com.goal.mundial.video.SelectCategory$PlaceholderFragment" >


        <LinearLayout
            android:id="@+id/layoutHeader1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/layoutAction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.50"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_weight="0.3"
                    android:gravity="left"
                    android:paddingTop="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher2" />

                <TextView
                    android:id="@+id/TextViewHeader1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/app_name"
                    android:textColor="#ffdc0e"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>
            </LinearLayout>
            
            
            


    <LinearLayout
        android:id="@+id/linearLayoutCheck"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="vertical" >

    </LinearLayout>
       <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:orientation="horizontal">
           
           
       </LinearLayout>

</LinearLayout>